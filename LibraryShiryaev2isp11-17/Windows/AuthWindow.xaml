<Window x:Class="LibraryShiryaev2isp11_17.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryShiryaev2isp11_17.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" 
        WindowStartupLocation="CenterScreen"
        Background="Bisque"
        Height="800"
        Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbAuth"
                   Text="Авторизация"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   >
        </TextBlock>

        <TextBlock x:Name="tbLog"
                   Text="Login:"
            FontSize="30"
                   Grid.Row="1"
                   Width="150"
                   Height="50"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">
            
        </TextBlock>

        <TextBlock x:Name="tbPas"
                   Text="Password:"
            FontSize="30"
                   Grid.Row="2"
                   Width="150"
                   Height="50"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">

        </TextBlock>
        <TextBox x:Name="txtLog"
                 Text=""
                 FontSize="30"
                 Grid.Row="1"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Width="200" Margin="0,0,40,0" 
                >
            
        </TextBox>
        <TextBox x:Name="txtPass"
                 Text=""
                 FontSize="30"
                 Grid.Row="2"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Width="200" Margin="0,0,40,0" 
                >

        </TextBox>

        <Button x:Name="btnEnter"
                Content="Войти"
                FontSize="30"
                Grid.Row="3"
                Background="SandyBrown"
                Width="200"
                Click="btnEnter_Click"
                Height="50">
            
        </Button>
                
    </Grid>
</Window>
